extends base

block content
    h4 Update video 
    form(method="POST")
        input(name="title", type=text, placeholder="Title", value=video.title, required) 
        input(name="description" type="text", placeholder="Description", value=video.description, required, maxlength=70)
        input(name="hashtags" type="text", placeholder="Hashtags, separated by comma", value=video.hashtags.join(), required)
        input(type="submit", value="save")